<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @if (ViewBag.Title == "")
    {
        <title>La Deplêche</title>

    }
    else
    {
        <title>@ViewBag.Title - La Deplêchce</title>

    }
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/mdb.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/addons/flag.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/all.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Script/jquery.min.js"></script>
    <script src="~/Script/popper.min.js"></script>
    <script src="~/Script/bootstrap.min.js"></script>
    <script src="~/Script/mdb.min.js"></script>
    <script src="~/Script/all.min.js"></script>
</head>


<body class="body-bg">
    <nav class="navbar navbar-expand-sm sticky-top navbar-dark title-nav">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <h1 class="nav-item text-center">La Delpêche</h1>
            </ul>

            <ul class="justify-content-center navbar-nav mr-auto">
                <h2 class="nav-item text-center">@ViewBag.Title</h2>
            </ul>

            <ul class="form-inline navbar-nav">
                <li class="nav-item me-3 me-lg-0 dropdown">
                    <a class="nav-link waves-effect waves-light" href="@Url.Action("LoginForm", "Login")">Connexion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link waves-effect waves-light" href="@Url.Action("Logout", "Login")">Déconnexion</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="sidenav">
        <a class="disable"></a>
        <a class="disable"></a>
        <a class="disable"></a>
        <a class="disable"></a>
        <a class="disable"></a>
        <a href="@Url.Action("Index", "Home")">Accueil</a>
        <a href="@Url.Action("GetAll", "Product")">Produits</a>
        <a href="@Url.Action("ContactForm", "Contact")">Contact</a>
        <a href="@Url.Action("CreateProduct", "Product")">Créer Produit</a>



    </div>
    <div class="container body-content main">
        <br />
        @RenderBody()
        <hr />

    </div>

    <div class="alert " id="alertExample">
        <i class="fas fa-check me-2"></i>
        Cet adresse a bien était copiée dans le presse papier
    </div>

    <div class="foot">
        <div class="text-center p-3 theme-bg">
            <p>Projet ASP.Net Licence Professionnelle Technologies du Web et Terminaux Mobiles | Université de Poitiers</p>
            <p>
                Réalisé par <a class="text-dark mail" onclick="copy('aurelien.ravaud@etu.univ-poitiers.fr')" href="#"> Aurélien Ravaud</a> et <a class="text-dark mail" onclick="copy('nicolas.renault@etu.univ-poitiers.fr')" href="#">Nicolas Renault</a>
            </p>
        </div>
    </div>
</body>
</html>

<script>
    function copy(mail) {
        console.log(mail);
        var dummy = $('<input>').val(mail).appendTo('body').select();
        document.execCommand('copy');
        dummy.remove();
        $('.alert').show();
        setTimeout(function () { $('.alert').fadeOut(1000); }, 2000);
    }
</script>