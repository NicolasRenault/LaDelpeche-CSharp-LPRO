@model AppliWeb1.Models.AuthentificationFormulaire

@{
    ViewBag.Title = "Connexion";
}

<h2>Connexion</h2>

@helper MdbHelper(string type, string id, string value)
{
    if (value == null)
    {
        value = id;
    }
    <div class="form-outline">
        <label class='form-label' for="@id">@id</label>
        <input type="@type" id="@id" name="@id" class="form-control" value="@value" placeholder="@id" />
    </div>
}

@using (Html.BeginForm())
{


    @MdbHelper("text", "Login", Model.Login)

    @MdbHelper("password", "Password", Model.Password)
    <br />

    <div class="form-outline">
        <button type="submit" class="btn btn-sm btn-rounded title-nav" style="font-size:15px">Se connecter</button>
    </div>
    <div>
        @Model.ReturnMessage
    </div>
}